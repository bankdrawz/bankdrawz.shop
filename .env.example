# Application Environment
NODE_ENV=development # development, production, or test

# Database Configuration
# To get a compatible database, please use https://neon.tech
DATABASE_URL=postgresql://user:password@localhost:5432/your_database_name

# Set to 'true' if you use Cloudflare Workers
CLOUDFLARE_ENV='false'

# Authentication
JWT_SECRET=replace_with_secure_random_string
JWT_EXPIRY=1d # 1d = 1 day, can use 8h, 30m, etc.

# Admin Credentials (fallback)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=password

# Discord Integration
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_id/your_webhook_token
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_USER_ID=your_discord_user_id

# Email Service Configuration
EMAIL_ADDRESS=your_email@example.com
EMAIL_HOST=smtp.example.com
EMAIL_SMTP_PORT=587
EMAIL_AUTH_USERNAME=your_username
EMAIL_AUTH_PASSWORD=your_password
EMAIL_SECURE=false # true for 465 port, false for other ports

# Site URLs
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# GitHub Integration
GITHUB_TOKEN=your_github_personal_access_token

# Vercel Blob Storage (for blog posts)
# These are automatically set in Vercel deployments
BLOB_READ_WRITE_TOKEN=your_vercel_blob_read_write_token